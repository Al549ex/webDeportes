---
import MainLayout from '../layouts/MainLayout.astro';
import { getUpcomingMatches, getRecentMatches } from '../services/footballApiService';

// Obtener tanto partidos pr√≥ximos como recientes
let upcomingMatches = [];
let recentMatches = [];
let error = null;

try {
  // Cargar datos en paralelo para mejor rendimiento
  const [upcomingData, recentData] = await Promise.all([
    getUpcomingMatches(5),
    getRecentMatches(3)
  ]);
  
  upcomingMatches = upcomingData.response || [];
  recentMatches = recentData.response || [];
  
  console.log(`‚úÖ Cargados ${upcomingMatches.length} partidos pr√≥ximos y ${recentMatches.length} recientes`);
} catch (e) {
  console.error("Error al cargar los partidos:", e);
  error = "No se pudieron cargar los datos de partidos";
}
---

<MainLayout title="F√∫tbolStats - Estad√≠sticas y predicciones deportivas">
  <main>
    <section class="hero">
      <div class="container">
        <h1>F√∫tbolStats</h1>
        <p>Tu portal de estad√≠sticas y predicciones deportivas</p>
        <a href="/equipos" class="cta-button">Explorar Equipos</a>
      </div>
    </section>

    {error && <div class="error-banner">{error}</div>}
  
    <section class="featured-matches">
      <div class="container">
        <h2>Pr√≥ximos partidos destacados</h2>
        
        <div class="matches-grid">
          {upcomingMatches.length === 0 && !error ? (
            <p class="loading-message">Cargando pr√≥ximos partidos...</p>
          ) : (
            upcomingMatches.map(match => (
              <div class="match-card">
                <div class="match-date">
                  {new Date(match.fixture.date).toLocaleDateString('es-ES', {
                    weekday: 'short',
                    day: '2-digit',
                    month: 'short',
                    hour: '2-digit',
                    minute: '2-digit'
                  })}
                </div>
                <div class="match-teams">
                  <div class="team home-team">
                    <img 
                      src={match.teams.home.logo} 
                      alt={match.teams.home.name}
                      width="30"
                      height="30"
                      loading="lazy"
                      onerror="this.src='/assets/team-placeholder.png';"
                    />
                    <span>{match.teams.home.name}</span>
                  </div>
                  <div class="match-vs">VS</div>
                  <div class="team away-team">
                    <img 
                      src={match.teams.away.logo} 
                      alt={match.teams.away.name}
                      width="30"
                      height="30"
                      loading="lazy"
                      onerror="this.src='/assets/team-placeholder.png';"
                    />
                    <span>{match.teams.away.name}</span>
                  </div>
                </div>
                <div class="match-league">
                  <span>{match.league.name}</span>
                </div>
                <a href={`/partidos/${match.fixture.id}`} class="match-details-link">
                  Ver detalles y predicciones
                </a>
              </div>
            ))
          )}
        </div>
      </div>
    </section>
    
    <section class="recent-matches">
      <div class="container">
        <h2>Resultados recientes</h2>
        
        <div class="matches-grid">
          {recentMatches.length === 0 && !error ? (
            <p class="loading-message">Cargando resultados recientes...</p>
          ) : (
            recentMatches.map(match => (
              <div class="match-card result-card">
                <div class="match-date">
                  {new Date(match.fixture.date).toLocaleDateString('es-ES', {
                    weekday: 'short',
                    day: '2-digit',
                    month: 'short'
                  })}
                </div>
                <div class="match-teams">
                  <div class="team home-team">
                    <img 
                      src={match.teams.home.logo} 
                      alt={match.teams.home.name}
                      width="30"
                      height="30"
                      loading="lazy"
                      onerror="this.src='/assets/team-placeholder.png';"
                    />
                    <span>{match.teams.home.name}</span>
                  </div>
                  <div class="match-result">
                    <span>{match.goals.home} - {match.goals.away}</span>
                  </div>
                  <div class="team away-team">
                    <img 
                      src={match.teams.away.logo} 
                      alt={match.teams.away.name}
                      width="30"
                      height="30"
                      loading="lazy"
                      onerror="this.src='/assets/team-placeholder.png';"
                    />
                    <span>{match.teams.away.name}</span>
                  </div>
                </div>
                <div class="match-league">
                  <span>{match.league.name}</span>
                </div>
                <a href={`/partidos/${match.fixture.id}`} class="match-details-link">
                  Ver resumen y estad√≠sticas
