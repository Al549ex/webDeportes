---
import MainLayout from '../../layouts/MainLayout.astro';
import PlayerStats from '../../components/react/PlayerStats.jsx';

// En una implementación real, obtendrías el jugador de tu base de datos
// usando el playerId de los parámetros de la URL
const { playerId } = Astro.params;
---

<MainLayout title={`Estadísticas del Jugador | FútbolStats`}>
  <div class="container player-profile">
    <div class="breadcrumbs">
      <a href="/">Inicio</a> &raquo;
      <a href="/jugadores">Jugadores</a> &raquo;
      <span>Perfil de jugador</span>
    </div>

    <PlayerStats client:load playerId={playerId} />
  </div>
</MainLayout>

<style>
  .player-profile {
    padding: 2rem 0;
  }
  
  .breadcrumbs {
    margin-bottom: 1.5rem;
    color: #666;
  }
  
  .breadcrumbs a {
    color: var(--color-secondary);
    text-decoration: none;
  }
</style>